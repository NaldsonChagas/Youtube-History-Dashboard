{
  "name": "youtube-history-backend",
  "version": "1.0.0",
  "description": "Backend API for YouTube history dashboard",
  "type": "module",
  "main": "dist/server.js",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src scripts tests",
    "lint:fix": "eslint src scripts tests --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed-history.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "fastify": "^5.1.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.6",
    "eslint": "^9.15.0",
    "typescript-eslint": "^8.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
